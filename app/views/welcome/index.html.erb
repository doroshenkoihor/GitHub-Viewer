<%= javascript_pack_tag 'user' %>
<% provide :page_title, 'Welcome' %>
<div class="text-center mt-5">
  <h1 class="display-1 mb-5">Welcome to <span class="text-primary">GitHub Viewer</span></h1>
  <h2 class="mb-4">Type in user GitHub account to see his repos:</h2>
  <div class="input-group mb-3">
    <input type="login" class="form-control" id="login-input" placeholder="Please, enter login">
    <button id="search-button" class="btn btn-primary btn-lg" >Go!</button>
  </div>
  <div id="results" />
  </div>
</div>